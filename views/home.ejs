<% include partials/header %>
<% var optionList = {all:"All",name:"Name",alpha:"Code",currency:"Currency",lang:"Language",capital:"Capital City",callingcode:"Calling Code",region:"Region",} %>
<div class="container">
    <header class="jumbotron"  id="hdr">
        <div class="container">
            <h1 style="font-family: 'Permanent Marker', cursive;text-align:center;">Welcome to Country Wiki</h1>
            <div id="formDiv">
                <form class="form-horizontal" action="/" method="GET">
                  <div class="form-group">
                      <div class="col-sm-1"></div>
                      <div class="col-sm-7">
                          <input type="text" class="form-control" id="searchType" placeholder="Enter here" name="searchType">
                      </div>
                    <div class="col-sm-2">
                        <select class="form-control" name="choice" id="choice">
                            <% for(key in optionList){%>
                                <option value="<%= key %>"><%= optionList[key] %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-sm-1">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                  </div>
            </form>
            </div>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% results.forEach(function(country){ %>
         <div class="col-md-3 col-sm-6">
            <a href= "<%= country["alpha3Code"] %>" class="thumbnail"> 
            <img src= "<%= country["flag"] %>">
            <div class="caption">
                <h4><%= country["name"] %></h4>
            </div>
            </a>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>